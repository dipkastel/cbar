<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/normal_snack_bar_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_8sdp"
        android:clipToPadding="false"
        android:background="@drawable/background_cbar_normal">

        <TextView
            android:id="@+id/snack_bar_txt_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/snack_bar_btn_action"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_centerVertical="true"
            android:textColor="#fff" />

        <Button
            android:id="@+id/snack_bar_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:background="@drawable/shape_line"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:textColor="@android:color/primary_text_dark"/>

    </RelativeLayout>

</RelativeLayout>